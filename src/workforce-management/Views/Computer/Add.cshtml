@model workforce_management.ViewModels.AddComputer

@{
    ViewData["Title"] = "Add a New Computer";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Add">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="NewComputer.SerialNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NewComputer.SerialNumber" class="form-control" />
                <span asp-validation-for="NewComputer.SerialNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="NewComputer.Make" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NewComputer.Make" class="form-control" />
                <span asp-validation-for="NewComputer.Make" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="NewComputer.Model" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NewComputer.Model" class="form-control" />
                <span asp-validation-for="NewComputer.Model" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add New Computer" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-controller="Computer" asp-action="Index">Back to Computer List</a>
</div>
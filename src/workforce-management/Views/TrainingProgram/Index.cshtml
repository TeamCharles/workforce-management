@model workforce_management.ViewModels.TrainingProgramIndex
@using Bangazon.Models;

<h2>Training Programs</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Descriptions</th>
            <th>Attendees</th>
        </tr>
    </thead>
    <tbody>
        @foreach (TrainingProgram program in @Model.TrainingPrograms)
        {
            <tr>
                <td><a asp-controller="TrainingProgram" asp-action="Detail" asp-route-id="@program.TrainingProgramId">@Html.DisplayFor(model => program.Name)</a></td>
                <td>@Html.DisplayFor(model => program.Description)</td>
                <td>@Html.DisplayFor(model => model.AttendeeCount[program.TrainingProgramId])</td>
            </tr>
        }
    </tbody>
</table>
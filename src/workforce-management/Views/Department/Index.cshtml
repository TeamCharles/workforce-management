@model workforce_management.ViewModels.DepartmentIndex
@using Bangazon.Models;


<h2>Departments</h2>
<a asp-controller="Department" asp-action="Add"><input type="submit" value="Add a Department" class="btn btn-primary" /></a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Descriptions</th>
            <th>Edit or Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Department department in Model.DepartmentList)
        {
            <tr>
                <td><a asp-controller="Department" asp-action="Detail" asp-route-id="@department.DepartmentId">@Html.DisplayFor(model => department.Name)</a></td>
                <td>@Html.DisplayFor(model => department.Description)</td>
                <td><a asp-action="Edit" asp-route-id="@department.DepartmentId"><input type="button" value="Edit" class="btn btn-primary"></a></td> 
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Department" asp-action="Add"><input type="submit" value="Add a Department" class="btn btn-primary" /></a>


